<%

recent_repos = [
    {
        full_name: 'ichigotake/ruby-Mikuregator',
        description: 'https://github.com/ichigotake/Mikuregator をPerlからRubyに移植予定',
    },
]

%><style>
    .description {
        font-size: small;
        color: #666;
    }
</style>

<h1>Recent repositories</h1>
<div>
  <% #INCLUDE 'include/pager.tt' %>
  <table class="table">
    <% recent_repos.each do |v| %>
    <tr>
      <td style="vertical-align:middle;"><span class="col-index"><% #loop.count+((pager.current_page-1)*pager.entries_per_page) %></span></td>
      <td class="icon"><% #INCLUDE 'include/icon.tt' WITH v = v %></td>
      <td><a href="/user"><%= v[:full_name] %></a><br><span class="description"><%= v[:description] %></span></td>
      <td style="white-space:nowrap;"><% #localtime(v.updated_at).strftime('%Y-%m-%d %H:%M:%S') %></td>
    </tr>
    <% end %>
  </table>
  <% #INCLUDE 'include/pager.tt' %>
</div>

