<%

# 本格的な実装に入るまでのダミー

keyword = 'text'
recent_repos = [
    {
        full_name: 'ichigotake/ruby-Mikuregator',
        description: 'https://github.com/ichigotake/Mikuregator をPerlからRubyに移植予定',
    },
]

%><form method="get" class="well text-center">
  <fieldset>
    <input type="text" class="span4" name="keyword" value="<%= keyword %>" placeholder="keyword">
    <input type="submit" class="btn btn-info" value="search">
  </fieldset>
</form>

<div>
  <% #INCLUDE 'include/pager.tt' %>
  <table class="table">
    <% recent_repos.each do |v| %>
    <tr>
      <td><% #loop.count+((pager.current_page-1)*pager.entries_per_page) %></td>
      <td><a href="/user/repo"><%= v[:full_name] %></a><br><span class="description"><%= v[:description] %></span></td>
      <td><% #localtime(v.updated_at).strftime('%Y-%m-%d %H:%M:%S') %></td>
    </tr>
    <% end %>
  </table>
  <% #INCLUDE 'include/pager.tt' %>
</div>

